# Configuración para Webempresa y Selcom IoT Hub
DirectoryIndex landing.html index.html

RewriteEngine On

# Manejo de rutas
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Servir landing.html para la raíz
    RewriteRule ^$ landing.html [L]

    # No redirigir si el archivo o directorio existe
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # Excluir explícitamente la carpeta API de la redirección SPA
    RewriteRule ^api/ - [L]

    # Redirigir todo lo demás a index.html
    # IMPORTANTE: El index.html que se debe usar es el de la carpeta DIST
    RewriteRule ^ index.html [L]
</IfModule>



# Control de Caché para asegurar actualizaciones
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 1 seconds"
    ExpiresByType text/html "access plus 1 seconds"
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
    ExpiresByType image/x-icon "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
</IfModule>

<IfModule mod_headers.c>
    # Forzar que el HTML no se guarde en caché agresiva
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "max-age=0, no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
</IfModule>

